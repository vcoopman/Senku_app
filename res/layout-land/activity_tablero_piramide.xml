            android:layout_toEndOf="@id/ff12"
            android:layout_below="@id/v41"
            android:contentDescription="Ficha" />

        <ImageView
            android:id="@+id/ff14"
            android:layout_margin="1dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/ff13"
            android:layout_below="@id/v41"
            android:contentDescription="Ficha" />

        <ImageView
            android:id="@+id/ff15"
            android:layout_margin="1dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/ff14"
            android:layout_below="@id/v41"
            android:contentDescription="Ficha" />



    </RelativeLayout>
    


</androidx.constraintlayout.widget.ConstraintLayout>