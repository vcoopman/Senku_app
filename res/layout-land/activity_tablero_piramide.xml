<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableroPiramide"
    android:layout_gravity="center"
    android:background="#E3E3E3"
    tools:ignore="RtlCompat">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_verticalp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guia_horizontalp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".5" />


    <ImageButton
        android:id="@+id/resetp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="src_in"
        android:src="@drawable/restart"
        app:layout_constraintBottom_toTopOf="@id/oneBackp"
        app:layout_constraintLeft_toRightOf="@id/mainp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/oneBackp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="src_in"
        android:src="@drawable/undo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/mainp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resetp" />


    <TextView
        android:id="@+id/puntajeTitulop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Puntaje"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/puntajeNumerop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mainp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/puntajeNumerop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/guia_horizontalp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mainp"
        app:layout_constraintTop_toBottomOf="@+id/puntajeTitulop"

        />

    <TextView
        android:id="@+id/movimientosTitulop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Jugadas"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/movimientosNumerop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mainp"
        app:layout_constraintTop_toBottomOf="@id/guia_horizontalp"

        app:layout_constraintVertical_chainStyle="packed"   />

    <TextView
        android:id="@+id/movimientosNumerop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/mainp"
        app:layout_constraintTop_toBottomOf="@+id/movimientosTitulop"

        />



    <RelativeLayout
        android:id="@+id/mainp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/v11"
            android:layout_margin="1dp"
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            />



        <ImageView
            android:id="@+id/ff1"
            android:layout_margin="1dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/v11"
            android:contentDescription="Ficha" />


        <ImageView
            android:id="@+id/v13"
            android:layout_width="124dp"
            android:layout_height="40dp"
            android:layout_margin="1dp"
            android:layout_toEndOf="@id/ff1" />

        <ImageView
