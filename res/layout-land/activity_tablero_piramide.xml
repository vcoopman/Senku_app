            android:layout_margin="1dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/v31"
            android:layout_below="@id/v21"
            android:contentDescription="Ficha" />

        <ImageView
            android:id="@+id/ff5"
            android:layout_margin="1dp"
